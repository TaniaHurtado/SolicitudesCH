
<%= form_for(solicitud) do |f| %>
  <% if solicitud.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(solicitud.errors.count, "error") %> prohibited this solicitud from being saved:</h2>

      <ul>
      <% solicitud.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descripción %><br>
    <%= f.text_field :descripcion %>
  </div>

  <div class="field">
    <%= f.label :tipo %> 
    <%= f.select :tipo, ['Carpintería','madera','Carpintería metálica
','Cerrajería','Electricidad','Mampostería','Mejoras locativas','Pintura','Plomería','Reparación de cubiertas','Traslado elemento','Vidrios','otro']%>
  </div>


  <div class="field">
    <%= f.label :importancía %>
    <%= f.select  :importancia, ['Prioritario', 'Programable']%>
  </div>

  <div class="field">
    <%= f.label :materiales %>
    <%= f.text_field :materiales %>
  </div>

  <div class="field">
    <%= f.label :fecha %>
    <%= f.datetime_select :fecha, {:use_month_names => ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre','Diciembre']}%>
  </div>

  <div class="field">
    <%= f.label :lugar %>
    <%= f.select :lugar, ['Sociología','CES','Rogelio Salmona', 'Aulas','Lenguas Extranjeras','Filosofía', 'Manuel Ancizar','Programa segunda lengua','Evocol', 'Las nieves', 'Casa Gaitán', 'Antonio Nariño ','Camilo Torres-Bloque 1']%>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="actions">
    <%= f.submit "Actualizar Solicitud" %>
  </div>
<% end %>
