<p id="notice"><%= notice %></p>

<h1>Observaciones</h1>

<table>
  <thead>
    <tr>
      <th>Motivo</th>
      <th>Descripcion</th>
      <th>Solicitud</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @observations.each do |observation| %>
      <tr>
        <td><%= observation.motivo %></td>
        <td><%= observation.descripcion %></td>
        <td><%= link_to 'Show', solicitud_observation_path(@solicitud,observation) %></td>
        <td><%= link_to 'Edit', edit_solicitud_observation_path(@solicitud,observation) %></td>
        <td><%= link_to 'Destroy', solicitud_observation_path(@solicitud,observation), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

