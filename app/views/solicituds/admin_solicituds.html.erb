<main class="detalle">
			<div class="breadcrumb-class">Está en:<a href="index.html" target="_self" title="Inicio">Ciencias Humanas</a><span>Solicitudes </span></div>
						<h1 style="text-align: center;"> SISTEMA DE SOLICITUDES </h1>
			<h2 style="text-align: center;"> FACULTAD CIENCIAS HUMANAS </h2>
  
			<p id="notice"><%= notice %></p>

      <h1 style="text-align: center">Solicitudes</h1>
						<div class="links">
					<%= link_to "Salir", destroy_user_session_path , method: :delete, :class => 'navbar-link' %>
					<%= link_to "Regresar", welcome_index_path  %>
				</div>

			<div>
			Filtros: 
					<%= form_tag admin_solicituds_path, method: 'get' do %>
						<%= select_tag :estado, options_for_select(["Todas", "Aceptada", "Realizada", "Generada", "Asignada", "Realizada", "Evaluada"], params[:estado]) %>
					<!--	<%= select_tag :importancia, options_for_select(["Todas", "Urgente", "Programable"], params[:importancia]) %>-->
						<%= submit_tag 'Filter' %>
					<% end %>
			</div>
      <div style="overflow-x:auto;">
			<table style="width:100%" class="sol_table">
		        <thead>
		          <tr>
		            <th colspan="1">Solicitante</th>
		            <th colspan="1">Descripción</th>
		            <th colspan="1">Tipo</th>
		            <th colspan="1">Importancía</th>
		            <th colspan="1">Estado</th>
		            <th colspan="1">Materiales</th>
		            <th colspan="1">Fecha</th>
		            <th colspan="1">Lugar</th>
		            <th colspan="1">Responsable</th> <th colspan="1">Evaluación</th>
		          </tr>
		        </thead>

		        <tbody>
							<% (@solicituds
							.solicitudes_por_estado(sanitize(params[:estado]))
							).each do |solicitud| %>
		            <tr class="sol_table">
		              <td colspan="1"> <% @user = User.find(solicitud.user)   %>
		                    <%= @user.nombre %> <%= @user.apellido %> </td>
		              <td colspan="1"><%= solicitud.descripcion %></td>
		              <td colspan="1"><%= solicitud.tipo %></td>
		              <td colspan="1"><%= solicitud.importancia %></td>
		              <td colspan="1"><%= solicitud.estado %></td>
		              <td colspan="1"><%= solicitud.materiales %></td>
		              <td colspan="1"><%= solicitud.fecha.strftime("%d/%m/%Y") %></td>
		              <td colspan="1"><%= solicitud.lugar %></td>
		              <td colspan="1"><%= solicitud.nombre_responsable %> <%= solicitud.nombre_responsable2 %></td>
		              <td colspan="3" style="padding-bottom: 15px;">
		                 <% if solicitud.estado == "Evaluada" %>
			              <div class="actions boton"><%= link_to 'Ver Evaluación',solicitud_evaluacions_path(solicitud) %>	</div>
			            </td>                       
					    </tr>
		            <% end %>
		          <% end %>
		        </tbody>
	      </table> 
				<br>  
	
</main>
