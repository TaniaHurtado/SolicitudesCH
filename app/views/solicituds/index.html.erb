<main class="detalle">
			<div class="breadcrumb-class">Está en: Ciencias Humanas ><span>  Solicitudes </span></div>
						<h1 style="text-align: center;"> SISTEMA DE SOLICITUDES </h1>
			<h2 style="text-align: center;"> FACULTAD CIENCIAS HUMANAS </h2>
  
			<p id="notice"><%= notice %></p>

      <h1 style="text-align: center">Mis Solicitudes</h1>
      <div class="links">
          <%= link_to 'Crear Solicitud', new_solicitud_path %>
          <%= link_to "Exportar Datos - Excel", solicituds_path(format: "xlsx") %>
          <%= link_to "Salir", destroy_user_session_path , method: :delete, :class => 'navbar-link' %>
      </div>
      
      <div class="div-table">
        <table style="width:100%" class="sol_table">
          <thead>
            <tr>
              <th colspan="1">Usuario</th>
              <th colspan="1">Descripcion</th>
              <th colspan="1">Tipo</th>
              <th colspan="1">Importancia</th>
              <th colspan="1">Estado</th>
              <th colspan="1">Materiales</th>
              <th colspan="1">Fecha</th>
              <th colspan="1">Lugar</th>
              <th colspan="1">Responsable</th>     
              <th colspan="3">Acciones</th>
            </tr>
          </thead>

          <tbody>
            <% @solicituds.each do |solicitud| %>
              <tr class="sol_table">
                <td colspan="1"> <% @user = User.find(solicitud.user)   %>
                      <%= @user.email  %></td>
                <td colspan="1"><%= solicitud.descripcion %></td>
                <td colspan="1"><%= solicitud.tipo %></td>
                <td colspan="1"><%= solicitud.importancia %></td>
                <td colspan="1"><%= solicitud.estado %></td>
                <td colspan="1"><%= solicitud.materiales %></td>
                <td colspan="1"><%= solicitud.fecha.strftime("%m/%d/%Y") %></td>
                <td colspan="1"><%= solicitud.lugar %></td>
                <td colspan="1"><%= solicitud.nombre_responsable %> <%= solicitud.nombre_responsable2 %></td>
                <td colspan="3" style="padding-bottom: 20px;">
                  <% if solicitud.estado == "Realizada" %>             
                    <div class="actions boton"><%= link_to 'Evaluar', new_solicitud_evaluacion_path(solicitud)%></div>
                  <% elsif solicitud.estado == "Evaluada" %>
                  <div class="actions boton">	<%= link_to 'Ver Calificación', solicitud_evaluacions_path(solicitud) %></div>
                  <% end %>
                  <% if solicitud.estado == "Generada" %>
                  <div class="actions boton"><%= link_to 'Editar',edit_solicitud_path(solicitud) %></div>
                    <div class="actions boton">
                      <%= link_to 'Eliminar', solicitud_path(solicitud),  
                                              method: :delete, 
                                              data: {confirm: '¿Estás seguro que deseas eliminar la solicitud?'} %>
                    </div>
                  <% end %>
                  <div class="actions boton"><%= link_to 'Ver Solicitud',solicitud %></div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>
</main>
 
 